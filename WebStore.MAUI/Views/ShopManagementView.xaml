<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebStore.MAUI.Views.ShopManagementView"
             Title="Shop"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <ListView
                    ItemsSource="{Binding Items}"
                    SelectedItem="{Binding ItemToBuy}"
                    Grid.Column="0"
                    Grid.Row="0"
                    >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Column="0" Text="{Binding Name}"/>
                                    <Label Grid.Column="1" Text="{Binding Description}"/>
                                    <Label Grid.Column="2" Text="{Binding IsBOGODisplay}"/>
                                    <Label Grid.Column="3" Text="{Binding Price, StringFormat='{}{0:C}'}"/>
                                    <Label Grid.Column="4" Text="{Binding IsMarkedDownDisplay}"/>
                                    <Label Grid.Column="5" Text="{Binding Quantity}"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ListView
                    ItemsSource="{Binding CurrentCart.Contents}"
                    
                    Grid.Column="1"
                    Grid.Row="0"
    >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="7*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="{Binding Name}"/>
                                    <Label Grid.Column="1" Text="{Binding Description}"/>
                                    <Label Grid.Column="2" Text="{Binding Price, StringFormat='{}{0:C}'}"/>
                                    <Label Grid.Column="3" Text="{Binding Quantity}"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid
                    Grid.Column="0"
                    Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button
                        Grid.Row="0"
                        Text="Add To Cart"
                        Clicked="AddToCartClicked"
                        />
                    <Button
                        Grid.Row="1"
                        Text="My Shopping Carts"
                        Clicked="MyShoppingCartsClicked"
                        />
                    <Button
                        Grid.Row="2"
                        Text="Back"
                        Clicked="ShopBack"
                        />
                </Grid>
                <Grid
                    Grid.Column="1"
                    Grid.Row="1"
                    >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Total Before Tax: $"
                       />
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="{Binding CurrentCart.ShoppingCartTotal}"
                        />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="Tax: %"
                        />
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding CurrentCart.ShoppingCartTax}"
                        />
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="Total After Tax: $"
                        />
                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="{Binding CurrentCart.ShoppingCartTotalAfterTax}"
                        />
                </Grid>
            </Grid>

        </Grid>
    </VerticalStackLayout>
</ContentPage>